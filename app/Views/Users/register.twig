{% extends "main.twig" %}
{% block content %}
    <!--Div for Background-->
    <div class="bg text-center">
        <!--Div for Centered Text & Input-->
        <div class="centered">
            <p class="firstLine"> I &nbsp; N &nbsp; V &nbsp; E &nbsp;
                N &nbsp; T &nbsp; O &nbsp; R &nbsp; Y &nbsp; . &nbsp; C &nbsp; O &nbsp; M </p>
            <p class="secondLine">Create New Account</p>

            <form method="post" action="/register">
                <p><label for="username"> </label>
                    <input type="text" id="username" name="username"
                           class="InputStyle" placeholder="Username" required></p>
                <p><label for="email"> </label>
                    <input type="email" id="email" name="email" class="InputStyle"
                           placeholder="email@email.com" required></p>
                <p><label for="password"> </label>
                    <input type="password" id="password" name="password" minlength="8"
                           class="InputStyle" placeholder="Password" required></p>
                <p><label for="password_chk"> </label>
                    <input type="password" id="password_chk" name="password_chk"
                           class="InputStyle" placeholder="Reenter Password" required></p>
                <p><input type="submit" class="button1" value="Register"> <br><br> <a href="/login">
                        <button class="button1" type="button">Have Account?</button>
                    </a></p>

            </form>


        </div>
        <!--Div for bottom Icons-->

    </div>
{% endblock %}